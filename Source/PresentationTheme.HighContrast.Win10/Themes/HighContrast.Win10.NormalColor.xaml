  <Style TargetType="{x:Type GroupBox}">
    <Setter Property="BorderBrush" Value="{aero10:SystemAliasResource GroupBox.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Template">
      <Setter.Value>
