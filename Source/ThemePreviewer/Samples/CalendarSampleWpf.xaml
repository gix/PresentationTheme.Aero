<UserControl x:Class="ThemePreviewer.Samples.CalendarSampleWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
  <StackPanel>
    <DatePicker Margin="3" SelectedDateFormat="Long" SelectedDate="04/01/2017"
                DisplayDateStart="01/01/2017" DisplayDateEnd="12/31/2017"
                FirstDayOfWeek="Monday"/>
    <DatePicker Margin="3" SelectedDateFormat="Long" SelectedDate="04/01/2017"
                DisplayDateStart="01/01/2017" DisplayDateEnd="12/31/2017"
                FirstDayOfWeek="Monday" IsEnabled="False"/>
    <Calendar x:Name="calendar1" Margin="3" HorizontalAlignment="Left"
              DisplayDateStart="01/01/1900" DisplayDateEnd="12/31/2017"
              SelectionMode="SingleRange"/>
  </StackPanel>
</UserControl>
